{
  "version": 2,
  "env": {
    "DATABASE_URL": "$DATABASE_URL",
    "NEXTAUTH_SECRET": "$NEXTAUTH_SECRET",
    "NEXTAUTH_URL": "https://coffeelogica.com"
  },
  "regions": ["iad1"],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/tenant/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Forwarded-Host",
          "value": "$host"
        }
      ]
    }
  ]
}
